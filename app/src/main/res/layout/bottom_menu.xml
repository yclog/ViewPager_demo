<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#fffafafa"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:id="@+id/bottom_menu_one_Layout">

            <include layout="@layout/item_one"></include>

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:id="@+id/bottom_menu_two_Layout">


            <include layout="@layout/item_two"></include>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="48dp"
            android:id="@+id/bottom_menu_three_Layout">

            <include layout="@layout/item_three"></include>
        </RelativeLayout>


</LinearLayout>